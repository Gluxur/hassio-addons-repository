{
  "name": "Somfy Protexial IO - Gateway",
  "version": "0.6.0",
  "slug": "spiog",
  "description": "Consume Somfy Protexial IO Proxy's REST API, to update HASS.io through MQTT",
  "arch": [ "armhf", "armv7", "aarch64", "amd64", "i386" ],
  "startup": "before",
  "auto_uart": true,
  "ports": {
    "80/tcp": 8094
  },
  "ports_description": {
    "80/tcp": "Not used yet"
  },
  "boot": "auto",
  "options": {
    "MqttBroker": {
      "Hostname": "MQTT broker hostname or ip",
      "TcpPort": 1883,
      "Username": "MQTT broker optional username",
      "Password": "MQTT broker optional password"
    },
    "Proxy": {
      "Hostname": "Somfy Protexial IO Proxy hostname or ip",
      "TcpPort": 8093
    },
    "Hassio": {
      "MqttDiscoverPrefix": "homeassistant",
      "EntitiesMqttPrefix": "somfy_",
      "EntitiesMqttSuffix": "",
      "EntitiesNamePrefix": "Somfy - ",
      "EntitiesNameSuffix": "",
      "ExposeGlobalStatus": "true",
      "ExposeElements": "true",
      "EnableMqttAlarmControlPanel": true,
      "MqttAlarmControlPanelState": "homeassistant/spiog/state",
      "MqttAlarmControlPanelStateA": "homeassistant/spiog/state_a",
      "MqttAlarmControlPanelStateB": "homeassistant/spiog/state_b",
      "MqttAlarmControlPanelStateC": "homeassistant/spiog/state_c",
      "MqttAlarmControlPanelCommand": "homeassistant/spiog/command"
      "MqttAlarmControlPanelCommandA": "homeassistant/spiog/command_a"
      "MqttAlarmControlPanelCommandB": "homeassistant/spiog/command_b"
      "MqttAlarmControlPanelCommandC": "homeassistant/spiog/command_c"
      "EnableSwitches": {
        "ZoneAll": true,
        "ZoneA": true,
        "ZoneB": true,
        "ZoneC": true
      },
      "AllowAlarmControlPanelDisarm": {
        "ZoneAll": true,
        "ZoneA": true,
        "ZoneB": true,
        "ZoneC": true
      }
    }
  },
  "schema": {
    "MqttBroker": {
      "Hostname": "str",
      "TcpPort": "int",
      "Username": "str?",
      "Password": "str?"
    },
    "Proxy": {
      "Hostname": "str",
      "TcpPort": "int"
    },
    "Hassio": {
      "MqttDiscoverPrefix": "str?",
      "EntitiesMqttPrefix": "str?",
      "EntitiesMqttSuffix": "str?",
      "EntitiesNamePrefix": "str?",
      "EntitiesNameSuffix": "str?",
      "ExposeGlobalStatus": "bool?",
      "ExposeElements": "bool?",
      "EnableMqttAlarmControlPanel": "bool?",
      "MqttAlarmControlPanelState": "str?",
      "MqttAlarmControlPanelStateA": "str?",
      "MqttAlarmControlPanelStateB": "str?",
      "MqttAlarmControlPanelStateC": "str?",
      "MqttAlarmControlPanelCommand": "str?"
      "MqttAlarmControlPanelCommandA": "str?"
      "MqttAlarmControlPanelCommandB": "str?"
      "MqttAlarmControlPanelCommandC": "str?"
      "EnableSwitches": {
        "ZoneAll": bool?,
        "ZoneA": bool?,
        "ZoneB": bool?,
        "ZoneC": bool?
      },
      "AllowAlarmControlPanelDisarm": {
        "ZoneAll": bool?,
        "ZoneA": bool?,
        "ZoneB": bool?,
        "ZoneC": bool?
      }
    }
  }
}